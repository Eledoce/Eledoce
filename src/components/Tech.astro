---
import { SiTailwindcss } from 'react-icons/si'
import { FaReact } from 'react-icons/fa6'
import { FaHtml5 } from 'react-icons/fa'
import { FaCss3Alt } from 'react-icons/fa6'
import { SiJavascript } from 'react-icons/si'
import { FaNodeJs } from 'react-icons/fa'
import { FaDocker } from 'react-icons/fa'

import { FaGithub } from 'react-icons/fa'
import { FaGitAlt } from 'react-icons/fa'
import { BiLogoTypescript } from 'react-icons/bi'
import { SiAstro } from 'react-icons/si'
---

<section class="tech">
  <FaReact className="text-[#57B9D8]" />
  <FaHtml5 className="text-[#FE4C1E]" />
  <FaCss3Alt className="text-[#214CE5]" />
  <SiJavascript className="text-[#F0DB4E] bg-[#333331]" />
  <SiTailwindcss className="text-[#38BDF8]" />
  <BiLogoTypescript className="text-[#007ACC]" />
  <FaGithub className="text-[#FFFFFF] " />
  <FaNodeJs className="text-[#8BC500]" />
  <FaDocker className="text-[#1D63ED]" />
  <FaGitAlt className="text-[#F34F29]" />
  <SiAstro className="text-white" />
</section>

<style>
  .imgHero {
    @apply w-20 h-20 rounded-full;
  }
  .tech {
    @apply flex justify-center items-center gap-2;
  }
  .tech > * {
    @apply text-6xl;
  }
</style>
